.layout-notification
  #account-page.account-page
    .account-page__inner.clearfix
      .account-page__inner--left.account-page__header
        %h2 Edit Account
        %h5 アカウントの編集
        %a.btn{"data-method" => "delete", :href => "/users/sign_out", :rel => "nofollow"} ログアウト
        %a.btn{:href => "https://chat-space-demo.herokuapp.com/"} トップページに戻る
      .account-page__inner--right.user-form
        %form#edit_user.edit_user{"accept-charset" => "UTF-8", :action => "/users", :method => "post"}
          %input{:name => "utf8", :type => "hidden", :value => "✓"}/
          %input{:name => "_method", :type => "hidden", :value => "put"}/
          %input{:name => "authenticity_token", :type => "hidden", :value => "QSCV0cqo2VrQ4eUeaQSQ69CT3YTPaIyEWIAHyAHbOdBniOiQAIwywAOs14Mwy13s17YtlLf88DxzUkzgwqvdiw=="}/
          .field
            .field-label
              %label{:for => "user_name"} Name
            .field-input
              %input#user_name{:autofocus => "autofocus", :name => "user[name]", :type => "text", :value => ""}/
          .field
            .field-label
              %label{:for => "user_email"} メールアドレス
            .field-input
              %input#user_email{:name => "user[email]", :type => "email", :value => ""}/
          .actions
            %input.btn{"data-disable-with" => "Update", :name => "commit", :type => "submit", :value => "Update"}/
